{
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ES2020",                  // Use modern JS features
    "module": "CommonJS",                // Node-style modules
    "moduleResolution": "Node",          // Resolve like Node.js
    "strict": true,                      // Enable all strict checks
    "outDir": "./dist",                  // Output compiled JS here
    "esModuleInterop": true,             // Enable default import compatibility
    "baseUrl": "./src",                  // Root import paths from ./src
    "skipLibCheck": true                 // Don't check node_modules .d.ts files
  },
  "include": ["src/**/*"]                // Compile all .ts under src/
}
